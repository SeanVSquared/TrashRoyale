<!-- Include header and menu partials -->
<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
  <div class="container-fluid">

    <!-- Message div -->
    <div class="col"><%- include ('../partials/message') %></div>
    
    <!-- Form control to create a new random challenge. This will make a post request to random -->
    <form action="/random" method="POST">
      <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center h-10">

          <div class="col col-xl-5">
            <div class="card" style="border-radius: 1rem;">
              <div class="p-4 p-lg-5 text-black">
                <form>
                  <div class="mb-3">
                    <span class="h1 fw-bold">Random Deck Challenge</span>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">New Random Deck</button>
                  </div>

                </form>
              </div>
              <% if(isLoggedIn) { %>
                <div class="col-md-auto">
                  <h5>Total Random Challenges Completed: <%=numChallengesCompleted  %></h5>
                </div>
                <% } %>
            </div>
          </div>

        </div>
      </div>
    </form>

  </div>
</main>

<!-- Include footer partials -->
<%- include ('../partials/footer') %>