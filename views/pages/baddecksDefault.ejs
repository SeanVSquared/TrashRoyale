<!-- Include header and menu partials -->
<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
  <!-- Message div -->
  <div class="col"><%- include ('../partials/message') %></div>
  
  <!-- Form control to create a new random challenge. This will make a post request to random -->
  <div style="padding-top: 9%;">
    <div class="random-deck-stats" style="max-width: 30%;">
      <div>
        <form action="/bad" method="POST">
          <div class="container py-5">
            <div class="card-body d-flex justify-content-center align-items-center h-10">
              <div class="p-4 p-lg-5 text-black">
                <form>
                  <div class="mb-3">
                    <h5 class="card-title" style="padding: 20px; padding-top: 30px;">Bad Deck Challenge</h5>
                  </div>
                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">New Bad Deck</button>
                  </div>
                  <% if(isLoggedIn) { %>
                    <div>
                      <h5 style="padding: 10px; padding-top: 10px;">Bad Challenges Completed: <%=numBadChallengesCompleted  %></h5>
                    </div>
                  <% } %>
                </form>
              </div>
             
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
 
</main>

<!-- Include footer partials -->
<%- include ('../partials/footer') %>